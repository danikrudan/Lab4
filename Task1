#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main()
{
int i, j , type_input;
int numbers[6][6];
int max = -200;
int min = 200;

int sum_min = 0;
int sum_max = 0;

 printf("Выберите тип ввода: \n1 - ручной ввод\n2 - рандом\n");
while (scanf("%d", &type_input) != 1 || getchar() != '\n'){
    printf("Ошибка!\n");
    rewind(stdin);
}


if (type_input == 2) {
    srand(time(NULL));
        for (i=0; i < 6; i++) {
             for (j=0; j < 6; j++) {
                numbers[i][j] = rand() % 200 - 100;
            }
        }

        printf("Элементы массива:\n");
    for (i=0; i < 6; i++) {
        for (j=0; j < 6; j++) {
             printf("%5d", numbers[i][j] );
        }
                   printf("\n");
    }
}

else if (type_input == 1) {
    printf("Значения:\n");
    for (i=0; i < 6; i++) {
             for (j=0; j < 6; j++) {
          int number;
           scanf("%d", &number);
            numbers[i][j] = number;
        } 
    }
    for (i=0; i < 6; i++) {
        for (j=0; j < 6; j++) {
            printf("%5d", numbers[i][j]);
        }
        printf("\n");
    }
}
else {
    printf("Такого варианта нет");
    return 0;
}

for (i=0; i < 6; i++) {
        for (j=0; j < 6; j++) {
            if ((i+1) % 2 == 0 && numbers[i][j] > max) {max = numbers[i][j];}
            else if((i+1) % 2 != 0 && numbers[i][j] < min) {min = numbers[i][j];}
            
        }
        if (max != -200) sum_max += max;
        if (min != 200) sum_min += min;
        max = -200;
        min = 200;
        printf("\n");
    }
printf("Сумма четных = %d\n", sum_max);
printf("Сумма нечетных = %d", sum_min);

}
